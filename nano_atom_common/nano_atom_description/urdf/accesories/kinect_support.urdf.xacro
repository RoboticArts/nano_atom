<?xml version="1.0"?>
<robot name="structure_kinect_support" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name ="structure_kinect_support" params="prefix parent *origin">

    <link name="${prefix}_link">
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://nano_atom_description/meshes/accessories/kinect_support_simple.stl" />
        </geometry>
        </collision>

        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://nano_atom_description/meshes/accessories/kinect_support.dae" />
        </geometry>
        </visual>

      <inertial>
        <mass value="1e-5" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
      </inertial>

    </link>


    <joint name="${prefix}_joint" type="fixed">
        <xacro:insert_block name="origin" />
        <parent link="${parent}"/>
        <child link="${prefix}_link"/>
    </joint>

  </xacro:macro>


</robot>
